<div class="signup-page">
  <div class="form-wrapper">

    <div class="form-header">
      <h1 class="form-title">Signup</h1>
    </div>

    <%= form_with model: @user, url: signup_path, local: true do |form| %>

      <div class="form-group">
        <%= form.label :name %>
        <div class="input-wrapper">
          <%= form.text_field :name,
                class: "input-field with-icon #{error_class(@user, :name)}",
                placeholder: "Your full name" %>
        </div>
        <%= error_message(@user, :name) %>
      </div>

      <div class="form-group">
        <%= form.label :shop_name, "Shop Name" %>
        <div class="input-wrapper">
          <%= form.text_field :shop_name,
                class: "input-field with-icon #{error_class(@user, :shop_name)}",
                placeholder: "Shop name" %>
        </div>
        <%= error_message(@user, :shop_name) %>
      </div>

      <div class="form-group">
        <%= form.label :email %>
        <div class="input-wrapper">
          <%= form.email_field :email,
                class: "input-field with-icon #{error_class(@user, :email)}",
                placeholder: "you@example.com" %>
        </div>
        <%= error_message(@user, :email) %>
      </div>

      <div class="form-group">
        <%= form.label :phone %>
        <div class="input-wrapper">
          <%= form.text_field :phone,
                class: "input-field with-icon #{error_class(@user, :phone)}",
                placeholder: "Phone number" %>
        </div>
        <%= error_message(@user, :phone) %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <div class="input-wrapper">
          <%= form.password_field :password,
                class: "input-field with-icon #{error_class(@user, :password)}",
                placeholder: "Password" %>
        </div>
        <%= error_message(@user, :password) %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation %>
        <div class="input-wrapper">
          <%= form.password_field :password_confirmation,
                class: "input-field with-icon #{error_class(@user, :password_confirmation)}",
                placeholder: "Confirm password" %>
        </div>
        <%= error_message(@user, :password_confirmation) %>
      </div>

      <%= form.submit "Create Account", class: "btn btn-primary" %>

    <% end %>

    <p class="signup-link">
      Have an account?
      <%= link_to "Login", login_path, class: "login-link" %>
    </p>

  </div>
</div>
