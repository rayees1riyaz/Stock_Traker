<div class="signup-page">
  <div class="form-wrapper">

    <h1>Signup</h1>

    <%= form_with model: @user, url: signup_path, local: true do |form| %>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "input-field #{'field-error' if @user.errors[:name].any?}" %>
        <% if @user.errors[:name].any? %>
          <p class="inline-error"><%= @user.errors.full_messages_for(:name).first %></p>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :shop_name, "Shop Name" %>
        <%= form.text_field :shop_name, class: "input-field #{'field-error' if @user.errors[:shop_name].any?}" %>
        <% if @user.errors[:shop_name].any? %>
          <p class="inline-error"><%= @user.errors.full_messages_for(:shop_name).first %></p>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: "input-field #{'field-error' if @user.errors[:email].any?}" %>
        <% if @user.errors[:email].any? %>
          <p class="inline-error"><%= @user.errors.full_messages_for(:email).first %></p>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :phone %>
        <%= form.text_field :phone, class: "input-field #{'field-error' if @user.errors[:phone].any?}" %>
        <% if @user.errors[:phone].any? %>
          <p class="inline-error"><%= @user.errors.full_messages_for(:phone).first %></p>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: "input-field #{'field-error' if @user.errors[:password].any?}" %>
        <% if @user.errors[:password].any? %>
          <p class="inline-error"><%= @user.errors.full_messages_for(:password).first %></p>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: "input-field #{'field-error' if @user.errors[:password_confirmation].any?}" %>
        <% if @user.errors[:password_confirmation].any? %>
          <p class="inline-error"><%= @user.errors.full_messages_for(:password_confirmation).first %></p>
        <% end %>
      </div>

      <%= form.submit "Create Account", class: "btn" %>

    <% end %>
     <p class="signup-link">
       Have an account?
      <%= link_to "Login", login_path %>
    </p>

  </div>
</div>
