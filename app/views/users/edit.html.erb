<div class="app-layout">
  
  <%= render "shared/sidebar" %>

  <main class="main-content">
    
    <div class="top-bar">
      <div class="page-header">
        <h1>Edit Profile</h1>
      </div>
    </div>
    
    <div class="stats-grid" style="display: block; max-width: 800px; margin: 0 auto;">
      <div class="stat-card" style="padding: 2.5rem;">
        
        <%= form_with(model: @user, local: true) do |form| %>
          <div style="margin-bottom: 2rem;">
            <h3 style="margin: 0 0 1rem 0; font-size: 1.1rem;">Personal Details</h3>
            
            <div class="form-grid">
              <div class="form-group">
                <%= form.label :name, style: "display: block; margin-bottom: 0.5rem; font-weight: 500; font-size: 0.9rem;" %>
                <%= form.text_field :name, class: "select-input", style: "width: 100%;" %>
              </div>
              
              <div class="form-group">
                <%= form.label :shop_name, style: "display: block; margin-bottom: 0.5rem; font-weight: 500; font-size: 0.9rem;" %>
                <%= form.text_field :shop_name, class: "select-input", style: "width: 100%;" %>
              </div>
            </div>

            <div class="form-group">
              <%= form.label :phone, style: "display: block; margin-bottom: 0.5rem; font-weight: 500; font-size: 0.9rem;" %>
              <%= form.text_field :phone, class: "select-input", style: "width: 100%;" %>
            </div>
          </div>

          <div style="margin-bottom: 2rem; padding-top: 2rem; border-top: 1px solid var(--color-border);">
            <h3 style="margin: 0 0 1rem 0; font-size: 1.1rem;">Security</h3>
            
            <div class="form-group" style="margin-bottom: 1.5rem;">
              <%= form.label :email, style: "display: block; margin-bottom: 0.5rem; font-weight: 500; font-size: 0.9rem;" %>
              <%= form.email_field :email, class: "select-input", style: "width: 100%;" %>
            </div>
            
          </div>

          <div style="display: flex; justify-content: flex-end; gap: 1rem; padding-top: 2rem; border-top: 1px solid var(--color-border);">
            <%= link_to "Cancel", users_path, class: "btn", style: "background: transparent; color: var(--color-text-muted);" %>
            <%= form.submit "Save Changes", class: "btn btn-primary" %>
          </div>
        <% end %>

      </div>
    </div>

  </main>
</div>
