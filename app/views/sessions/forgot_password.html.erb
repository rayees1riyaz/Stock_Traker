<div class="signup-page">
  <div class="form-wrapper">

    <h1>Forgot Password</h1>
    
    <p class="auth-description">
      Enter your email address and we'll send you a link to reset your password.
    </p>

    <%= form_with url: send_reset_link_path, local: true do |form| %>

      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email,
              value: params[:email],
              placeholder: "Enter your email",
              autocomplete: "email",
              class: "input-field #{'field-error' if flash[:alert] == 'Email not found.' || flash[:alert] == 'Email is required.'}" %>
        <% if flash[:alert] == "Email not found." || flash[:alert] == "Email is required." %>
        <% end %>
      </div>

      <%= form.submit "Send Reset Link", class: "btn btn-primary btn-block" %>

    <% end %>

    <p class="signup-link">
      <% if current_user %>
        <%= link_to "Back to Settings", users_path %>
      <% else %>
        <%= link_to "Back to Login", login_path %>
      <% end %>
    </p>

  </div>
</div>
