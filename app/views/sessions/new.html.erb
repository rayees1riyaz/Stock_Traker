<div class="signup-page">
  <div class="form-wrapper">

    <h1>Login</h1>

    <%= form_with url: login_path, local: true do |form| %>

      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email,
              value: params[:email],
              autocomplete: "email",
              class: "input-field #{'field-error' if flash[:email_error].present?}" %>

        <% if flash[:email_error].present? %>
          <p class="inline-error"><%= flash[:email_error] %></p>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password,
              autocomplete: "current-password",
              class: "input-field #{'field-error' if flash[:password_error].present?}" %>

        <% if flash[:password_error].present? %>
          <p class="inline-error"><%= flash[:password_error] %></p>
        <% end %>
      </div>

      <%= form.submit "Login", class: "btn" %>

    <% end %>

    <p class="signup-link">
      Donâ€™t have an account?
      <%= link_to "Sign up", signup_path %>
    </p>

  </div>
</div>
